{
  "name": "drone-survey-management",
  "version": "1.0.0",
  "description": "Drone Survey Management System - Plan, manage, and monitor autonomous drone surveys",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm install",
    "start": "cd server && npm start",
    "start:server": "node server/src/index.js",
    "vercel-build": "cd client && npm install && npm run build",
    "test": "cd server && npm test",
    "db:migrate": "cd server && npm run migrate",
    "db:seed": "cd server && npm run seed",
    "migrate": "cd server && npm run migrate",
    "seed": "cd server && npm run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
